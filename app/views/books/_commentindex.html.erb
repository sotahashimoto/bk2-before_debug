<% comments.each do |c| %>
  <%= attachment_image_tag c.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", format: 'jpeg' %>
  <%= c.content %>
  <% if c.user == current_user %>
    <%= link_to "Destroy", book_comment_path(c.book.id, c.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, remote: true %><br>
  <% else %>
    <br>
  <% end %>
  <%= c.user.name %><br>
<% end %>